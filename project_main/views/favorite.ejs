<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Favorites</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <aside class="sidebar">
        <div class="logo">KuruKuru</div>
        <div class="user-profile">
            <img src="/images/user-avatar.jpg" alt="User Avatar" class="avatar">
            <div class="user-info">
                <p class="username">
                    <%= user.username %>
                </p>
                <p class="user-role">On KuruKuru</p>
            </div>
        </div>
        <nav>
            <ul>
                <li><a href="/menu"><i class="fas fa-home"></i>Home</a></li>
                <li><a id="trend-button" href="/trending"><i class="fas fa-chart-line"></i> Trending</a></li>
                <li><a href="/favorite"><i class="fas fa-star"></i>Favorite</a></li>
                <li><a id="cart-button" href="/cart"><i class="fas fa-cart-plus"></i> Cart</a></li>
                <li><a id="settings-button" href="/setting"><i class="fas fa-cog"></i> Settings</a></li>
            </ul>
        </nav>
        <button class="logout-button" onclick="window.location.href='/logout'">
            <div class="logout-content">
                <i class="fas fa-sign-out-alt"></i>
                <div class="logout-text">
                    <p>Log Out</p>
                    <p>End your session</p>
                </div>
            </div>
        </button>
    </aside>

    <main class="content">
        <div class="container">
            <h1 class="text-center">Your Favorite Videos</h1>

            <!-- Search Bar -->
            <form method="GET" action="/favorite" class="mb-4">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Search videos..." value="<%= searchQuery || '' %>">
                    <button class="btn" type="submit" style="background-color: #ff9d9d; color: white;">Search</button>
                </div>
            </form>

            <% if (favorites.length > 0) { %>
                <div class="row">
                    <% favorites.forEach((video) => { %>
                        <div class="col-md-4">
                            <div class="card mb-4">
                                <video class="card-img-top" controls>
                                    <source src="/assets/<%= video.video_url %>" type="video/mp4">
                                    Your browser does not support the video tag.
                                </video>
                                <div class="card-body">
                                    <h5 class="card-title"><%= video.title %></h5>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <p class="text-center">No favorite videos found.</p>
            <% } %>
        </div>
    </main>
</body>

</html>